<div class="container">
  <div class="row">
    <div class="col-md-10">
      <%= render 'search' %>
      <h2>"<%= params[:word] %>" の結果</h2>
      <table class="table">
        <% if @range == "User" %>
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= image_tag user.get_profile_image, size:"50x50" %></td>
                <td><%= user.name %></td>
                <td>
                  <%= link_to "Show", user_path(user), class: "btn btn-sm btn-success" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        <% else %>
          <thead>
             <tr>
              <th>image</th>
              <th>title</th>
              <th>opinion</th>
              <th colspan="3"></th>
             </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= image_tag book.user.get_profile_image, size:"50x50" %></td>
                <td>
                  <%= link_to book_path(book) do %>
                  <%= book.title %>
                  <% end %>
                </td>
                <td><%= book.body %><td>
              </tr>
            <% end %>
          </tbody>
        <% end %>
      </div>
    </div>
  </div>
</div>
