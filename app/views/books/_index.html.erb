<tr>
  <th></th>
  <th>Title</th>
  <th>Opinion</th>
  <th colspan="3"></th>
</tr>
<% books.each do |book| %>
  <tr>
    <td>
      <% link_to book_path(book) do %>
      <%= image.tag book.user.get_image, size:"50x50", fallback:"no_image.jpg" %>
      <% end %>
    </td>
    <td>
      <% link_to book_path(book) do %>
      <%= book.title %>
      <% end %>
    </td>
    <td><%= book.body %></td>
  </tr>
<% end %>