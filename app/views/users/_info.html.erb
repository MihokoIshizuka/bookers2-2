<table class="table">
  <tr><%= image_tag user.get_profile_image, size:"100x100", fallback:"no_image.jpg" %></tr>
  <tr>
    <th>Name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>Introduction</th>
    <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>Follows</th>
    <th>
      <%= link_to user_followings_path(user) do %>
        <%= user.followings.count %>
      <% end %>
    </th>
  </tr>
  <tr>
    <th>Followers</th>
    <th>
      <%= link_to user_followers_path(user) do %>
        <%= user.followers.count %>
      <% end %>
    </th>
  </tr>
  <tr>
    <th>
    <% unless user == current_user %>
    <% if current_user.following?(user) %>
      <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-sm btn-danger" %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-sm btn-success" %>
    <% end %>
    <% end %>
    </th>
  </tr>
</table>

<div class="row">
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
  <i class="fas fa-user-cog"></i>
  <% end %>
</div>

