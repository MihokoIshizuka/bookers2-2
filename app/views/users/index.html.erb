<table>
  <h1>Users</h1>
  <tr>
  <th></th>
  <th>Title</th>
  <th>Name</th>
  <th colspan="3"></th>
</tr>
<% @users.each do |user| %>
  <tr>
    <td><%= image.tag user.get_image, size:"50x50", fallback:"no_image.jpg" %></td>
    <td><%= user.name %></td>
    <td><%= link_to "Show", user_path, class: "btn btn-sm btn-success" %></td>
  </tr>
<% end %>
</table>
