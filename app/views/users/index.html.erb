<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <h1>User info</h1>
      <%= render "info", user: current_user %>
      <h2>New Book</h2>
      <%= render "books/form", book: @book %>
    </div>
    <div class="col-lg-8 offset-md-1">
      <table>
      <h1>Users</h1>
      <tr>
      <th></th>
      <th>Title</th>
      <th>Name</th>
      <th colspan="3"></th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= image.tag user.get_profile_image, size:"50x50", fallback:"no_image.jpg" %></td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path, class: "btn btn-sm btn-success" %></td>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>
